<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".art.AboutUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/visitorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_slab_bold"
            android:text="Hi, "
            android:textColor="@color/mainTextColor"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_slab"
            android:text="  I`m Volodymyr Pastukh, and this is my first test project on Android. I hope you liked it. \n
    I will care and upgrade my firstborn project, in order to in order to improve your user experience!"
            android:textColor="@color/mainTextColor"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/gitLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:autoLink="web"
            android:fontFamily="@font/roboto_slab_light"
            android:text="@string/githubLink"
            android:textColor="@color/mainTextColor"
            android:textSize="22sp" />


    </LinearLayout>
</FrameLayout>